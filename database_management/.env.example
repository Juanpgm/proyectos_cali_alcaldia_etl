# Environment configuration for Intelligent ETL System

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=etl_proyectos_cali
DB_USER=postgres
DB_PASSWORD=postgres
DB_SCHEMA=public

# Alternative: Full DATABASE_URL (for Railway, Heroku, etc.)
# DATABASE_URL=postgresql://user:password@host:port/database

# Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_TIMEOUT=30

# PostGIS Configuration
ENABLE_POSTGIS=true
POSTGIS_VERSION=3.3

# Application Settings
LOG_LEVEL=INFO
DATA_DIR=transformation_app/app_outputs

# ETL Settings
BATCH_SIZE=1000
AUTO_CREATE_TABLES=true
AUTO_REPAIR=true