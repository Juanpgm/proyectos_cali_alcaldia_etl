rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla específica para unidades_proyecto con autenticación
    match /unidades_proyecto/{upid} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Regla temporal para permitir Admin SDK (service accounts)
    // Nota: Esta regla permite operaciones desde el servidor
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2026, 12, 31);
    }
  }
}